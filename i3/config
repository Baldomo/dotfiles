client.focused          $bg     $bg     $fg     $bg       $bg
client.focused_inactive $bg     $bg     $fg     $bg       $bg
client.unfocused        #333333 #333333 $fg     $bg       #333333
client.urgent           $bg     $bg     $fg     $bg       $bg
client.placeholder      $bg     $bg     $fg     $bg       $bg

client.background       $bg

# window size
bindsym $mod+F3 border none
bindsym $mod+F2 border normal 0

# window borders
for_window [class=".*"] border none
for_window [class=".*"] title_format " > %title"

#Volume up and down keybindings
bindsym XF86AudioLowerVolume exec "amixer -c 1 set Master 2dB+ -M; sleep 0.3"
bindsym XF86AudioRaiseVolume exec "amixer -c 1 set Master 2dB- -M; sleep 0.3"

# Starts a cool mixer on Win+F4
bindsym Mod4+F4 exec --no-startup-id "$terminal -e ncpamixer"

# Get new random wallpaper
bindsym $mod+Shift+w exec "wal -a 90 -i $wallpapers"

# Lock the screen
bindsym $mod+l exec lockscreen -b -s

# Take screenshot
bindsym $mod+Shift+s exec scrot -q 100 '%Y-%m-%d_%H-%M_$wx$h_scrot.png' -e 'mv $f ~/Pictures/Screenshots/'

# Dolphin
bindsym $mod+Shift+d exec $filemanager

### Gaps
gaps inner 8
gaps outer 6

# Startup stuff
exec [ -f ~/.Xresources ] && xrdb -merge ~/.Xresources
exec --no-startup-id compton -cGb --backend glx --glx-no-stencil --xrender-sync-fence --dbus -e=0.1 --vsync opengl-swc -f --shadow-offset-y=5 --shadow-offset-x=0 --shadow-radius=3 -o 0.5
exec wal -a 90 -i "$(< "${HOME}/.cache/wal/wal")"
